  }

  .blog-content img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 16px 0;
  }

  .blog-content table {
    border-collapse: collapse;
    width: 100%;
    margin: 16px 0;
  }

  .blog-content th,
  .blog-content td {
    text-align: left;
    padding: 12px;
    border-bottom: 1px solid #333;
  }

  .blog-content th {
    background-color: rgba(255, 255, 255, 0.05);
    font-weight: bold;
    color: #ffffff;
  }

  /* Light mode styles */
  .light-mode .blog-content {
    color: #383838;
  }

  .light-mode .blog-content h1,
  .light-mode .blog-content h2,
  .light-mode .blog-content h3,
  .light-mode .blog-content h4,
  .light-mode .blog-content h5,
  .light-mode .blog-content h6 {
    color: #111111;
  }

  .light-mode .blog-content p,
  .light-mode .blog-content li {
    color: #383838;
  }

  .light-mode .blog-content pre {
    background-color: #f4f4f4;
    border-color: #ddd;
  }

  .light-mode .blog-content pre code {
    color: #333;
  }

  .light-mode .blog-content blockquote {
    background-color: rgba(0, 0, 0, 0.03);
  }

  .light-mode .blog-content th,
  .light-mode .blog-content td {
    border-bottom-color: #ddd;
  }

  .light-mode .blog-content th {
    background-color: rgba(0, 0, 0, 0.03);
  }

  /* Bento footer card - light mode */
  .light-mode .mt-12.bg-darkslate-500 {
    background-color: var(--darkslate-500);
    border-color: var(--darkslate-400);
  }

  .light-mode .mt-12 .text-neutral-100 {
    color: #111111;
  }

  .light-mode .mt-12 .text-neutral-400 {
    color: #6b6b6b;
  }
</style>
