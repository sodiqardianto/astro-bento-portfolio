---
interface Props {
  title?: string;
  body?: string;
}

const { title, body } = Astro.props;
---

<>
  {title && <h2 class="text-xl font-bold m-0 z-20 card-title">{title}</h2>}
  {body && <p class="m-0 font-light text-base flex flex-col card-body">{body}</p>}
  <slot />
</>

<style>
  /* Dark mode styling (default) */
  .card-title {
    color: #ffffff;
  }

  .card-body {
    color: #e3e3e3;
  }

  /* Light mode styling */
  :global(.light-mode) .card-title {
    color: #111111;
  }

  :global(.light-mode) .card-body {
    color: #383838;
  }
</style>
